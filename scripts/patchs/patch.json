
{
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "auth-service",
            "resources": {
              "requests": {"memory": "512Mi"},
              "limits":   {"memory": "1Gi"}
            },
            "readinessProbe": {"initialDelaySeconds": 60, "timeoutSeconds": 5, "periodSeconds": 10},
            "livenessProbe":  {"initialDelaySeconds":120, "timeoutSeconds": 5, "periodSeconds":20, "failureThreshold":5}
          }
        ]
      }
    }
  }
}


